extends layout

block content
    .container
        .row
            .span12
                h2 New Event for #{user.artist_name}
                form(method='post', enctype='multipart/form-data')
                    .location
                        label Location Description
                        input(type='text', name='location')
                    #map
                    .start-time
                        label Start Time
                        input(type='text', name='starttime', id='starttime')
                    .end-time
                        label End Time
                        input(type='text', name='endtime', id='endtime')
                    .submit-actions
                        input(name='submit', type='submit', class='btn', value='Add')
                    .submit-actions.btn-group
                        a.btn.btn-primary(href='/profile') Update
                        a.btn(href='/profile') Delete
                    input(type='hidden',name='coordinates', id='coordinates')



    script(src='//cdn.leafletjs.com/leaflet-0.5/leaflet.js')
